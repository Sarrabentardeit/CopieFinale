{% extends 'base.html.twig' %}

{% block title %}Dossier Médical{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Page spécifique */
        .content {
            margin: 20px auto;
            width: 85%;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        h1 {
            text-align: center;
            color: #34495e;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Table Styling */
        .table {
            background-color: #f8f9fa;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #2c3e50;
            color: #fff;
            padding: 12px;
            text-align: left;
            width: 30%;
        }

        .table td {
            padding: 12px;
            color: #34495e;
        }

        /* Buttons */
        .btn {
            margin: 10px 5px;
            border-radius: 8px;
            padding: 8px 15px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-back {
            background-color: #00a876;
            color: #fff;
        }

        .btn-back:hover {
            background-color: #00895e;
        }

        .btn-edit {
            background-color: #ff9800;
            color: #fff;
        }

        .btn-edit:hover {
            background-color: #e68900;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .content {
                width: 95%;
                padding: 15px;
            }

            .table th, .table td {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content">
        <!-- Titre -->
        <h1>Détails du Dossier Médical</h1>

        <!-- Tableau des informations -->
        <table class="table">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ medical_record.id }}</td>
            </tr>
            <tr>
                <th>Diagnostic</th>
                <td>{{ medical_record.diagnosis }}</td>
            </tr>
            <tr>
                <th>Plan de Traitement</th>
                <td>{{ medical_record.treatmentPlan }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ medical_record.createdDate ? medical_record.createdDate|date('Y-m-d') : 'Non définie' }}</td>
            </tr>
            </tbody>
        </table>

        <!-- Boutons d'actions -->
        <div class="text-center">
            <a href="{{ path('doctor_dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
            <a href="{{ path('app_medical_record_edit', {'id': medical_record.id}) }}" class="btn btn-edit">Modifier</a>
            {{ include('medical_record/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
        </div>
    </div>
{% endblock %}
