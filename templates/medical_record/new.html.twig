{% extends 'base.html.twig' %}

{% block title %}Créer un Nouveau Dossier Médical{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Fond global */
        body {
            background-color: #f0f8ff;
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        /* Sidebar */
        .sidebar {
            background-color: #2c3e50;
            color: #fff;
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h3 {
            color: #00d2b3;
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.2rem;
        }

        .sidebar a {
            color: #ddd;
            text-decoration: none;
            padding: 10px 15px;
            margin-bottom: 8px;
            border-radius: 5px;
            display: block;
            transition: all 0.3s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #00d2b3;
            color: #fff;
        }

        /* Contenu principal */
        .content {
            margin-left: 270px;
            padding: 30px;
            background: linear-gradient(to bottom right, #e6f9f2, #d0f0f8);
            min-height: 100vh;
        }

        h1 {
            font-size: 2.2rem;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Form Container */
        .form-container {
            background: #fff;
            border-radius: 8px;
            padding: 30px;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 600;
            color: #555;
        }

        .form-control {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        .form-control:focus {
            border-color: #00d2b3;
            box-shadow: 0 0 8px rgba(0, 210, 179, 0.3);
        }

        /* Boutons */
        .btn-custom {
            background-color: #00d2b3;
            color: #fff;
            font-weight: bold;
            border-radius: 8px;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #00b5a1;
            color: #fff;
        }

        .btn-back {
            background-color: #607d8b;
            color: #fff;
        }

        .btn-back:hover {
            background-color: #455a64;
        }

    </style>
{% endblock %}

{% block body %}
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Tableau de Bord</h3>
        <a href="{{ path('doctor_dashboard') }}" class="active">
            <i class="bi bi-speedometer2"></i> Accueil
        </a>
        <a href="{{ path('app_doctor_medical_records') }}">
            <i class="bi bi-folder-plus"></i> Gérer les Dossiers Médicaux
        </a>
        <a href="{{ path('app_prescription_index') }}">
            <i class="bi bi-file-earmark-text"></i> Gérer les Prescriptions
        </a>
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>

    <!-- Contenu Principal -->
    <div class="content">
        <h1>Créer un Nouveau Dossier Médical</h1>
        <div class="form-container">
            {{ include('medical_record/_form.html.twig', {'button_label': 'Créer'}) }}

            <div class="text-center mt-3">
                <a href="{{ path('app_doctor_medical_records') }}" class="btn btn-back">
                    Retour à la Liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}
