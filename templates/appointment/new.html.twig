{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        /* Fond global amélioré */
        body {
            background: linear-gradient(135deg, #e0f2f1, #80deea);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 270px;
            height: 100vh;
            background-color: #2c3e50;
            color: #fff;
            padding: 20px 15px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        }

        .sidebar h3 {
            text-align: center;
            color: #1abc9c;
            margin-bottom: 30px;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .sidebar a {
            display: block;
            color: #ddd;
            text-decoration: none;
            padding: 12px 18px;
            margin: 10px 0;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #1abc9c;
            color: #fff;
            transform: translateX(5px);
        }

        /* Formulaire principal */
        .form-container {
            background: #ffffff;
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 800px;
            margin: auto;
            animation: slideIn 0.7s ease-out;
        }

        /* Titre */
        h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        /* Champs de formulaire */
        .form-control {
            border: 1.5px solid #b2dfdb;
            border-radius: 8px;
            padding: 12px;
            font-size: 1.1rem;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #1abc9c;
            outline: none;
            box-shadow: 0 0 8px rgba(26, 188, 156, 0.5);
        }

        /* Bouton */
        .btn-primary {
            background: #1abc9c;
            color: #fff;
            font-size: 1.3rem;
            font-weight: bold;
            border: none;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #16a085;
            transform: scale(1.02);
        }

        /* Animation d'entrée */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


    </style>
{% endblock %}

{% block body %}
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Tableau de Bord</h3>
        <a href="{{ path('patient_dashboard') }}">
            <i class="bi bi-speedometer2"></i> Accueil
        </a>
        <a href="{{ path('appointment_new') }}" class="active">
            <i class="bi bi-calendar-plus"></i> Prendre un Rendez-vous
        </a>
        <a href="{{ path('app_medical_record_my') }}">
            <i class="bi bi-file-medical"></i> Mes Dossiers Médicaux
        </a>
        <a href="{{ path('app_patient_account') }}">
            <i class="bi bi-person-circle"></i> Mon Espace Patient
        </a>
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>

    <!-- Contenu principal -->
    <div class="content">
        <div class="form-container">
            <h1>{{ form.vars.value.id ? 'Modifier' : 'Nouveau' }} Rendez-vous</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
