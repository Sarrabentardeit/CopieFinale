{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - Administrateur{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(to bottom right, #eaf9f0, #e0f3fc);
            font-family: 'Roboto', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: #fff;
            padding: 20px 10px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h3 {
            text-align: center;
            color: #00c853;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            padding: 12px;
            color: #f8f9fa;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s ease;
        }

        .sidebar a:hover, .sidebar a.active {
            background-color: #00a876;
            color: #fff;
        }

        /* Contenu principal */
        .content {
            margin-left: 270px;
            padding: 40px;
        }

        .content h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: bold;
        }

        .content p {
            text-align: center;
            color: #555;
            margin-bottom: 40px;
        }

        /* Cartes */
        .card-action {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background: #fff;
            transition: all 0.3s ease;
            padding: 20px;
        }

        .card-action:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .card-action i {
            font-size: 2.5rem;
            color: #00c853;
            margin-bottom: 15px;
        }

        .stats-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: 0.3s ease;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }

        .stats-card h5 {
            color: #666;
            margin-bottom: 10px;
        }

        .stats-card span {
            font-size: 2.2rem;
            font-weight: bold;
            color: #00a876;
        }

        .btn-main {
            background: #00c853;
            color: #fff;
            font-weight: bold;
            border-radius: 8px;
            transition: 0.3s ease;
            padding: 10px 15px;
        }

        .btn-main:hover {
            background: #008744;
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Administration</h3>
        <a href="{{ path('admin_dashboard') }}" class="active">
            <i class="bi bi-speedometer2 me-2"></i> Tableau de Bord
        </a>
        <a href="{{ path('admin_manage_patients') }}">
            <i class="bi bi-people me-2"></i> Gérer les Patients
        </a>
        <a href="{{ path('admin_manage_doctors') }}">
            <i class="bi bi-person-circle me-2"></i> Gérer les Docteurs
        </a>
        <a href="{{ path('admin_manage_admins') }}">
            <i class="bi bi-person-badge me-2"></i> Gérer les Admins
        </a>
        <a href="{{ path('app_register') }}">
            <i class="bi bi-person-plus me-2"></i> Créer un Compte
        </a>
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
        </a>
    </div>


    <!-- Contenu principal -->
    <div class="content">
        <h1>Tableau de bord Administrateur</h1>
        <p>Gérez efficacement les patients, dossiers médicaux, prescriptions et statistiques.</p>

        <!-- Statistiques -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <h5>Total Patients</h5>
                    <span>{{ total_patients }}</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <h5>Total Docteurs</h5>
                    <span>{{ total_doctors }}</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <h5>Total Administrateurs</h5>
                    <span>{{ total_admins }}</span>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
