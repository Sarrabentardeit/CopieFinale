{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="text-center">Détails de l'Utilisateur</h1>
        <table class="table table-bordered table-striped mt-4">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
            </tbody>
        </table>
        <div class="text-center mt-4">
            <a href="{{ path('admin_manage_doctors') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
