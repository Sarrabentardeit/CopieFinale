{% extends 'base.html.twig' %}

{% block title %}Gérer les Administrateurs{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #e6f9f2, #d0f0f8);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            color: #333;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: #fff;
            padding: 20px 10px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h3 {
            text-align: center;
            color: #00c853;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            padding: 12px;
            color: #f8f9fa;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s ease;
        }

        .sidebar a:hover, .sidebar a.active {
            background-color: #00a876;
            color: #fff;
        }

        /* Contenu principal */
        .content {
            margin-left: 270px;
            padding: 40px;
        }

        .content h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: bold;
        }

        .table {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #2c3e50;
            color: #fff;
        }

        .btn-sm {
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Administration</h3>
        <a href="{{ path('admin_dashboard') }}" class="active">
            <i class="bi bi-speedometer2 me-2"></i> Tableau de Bord
        </a>
        <a href="{{ path('admin_manage_patients') }}">
            <i class="bi bi-people me-2"></i> Gérer les Patients
        </a>
        <a href="{{ path('admin_manage_doctors') }}">
            <i class="bi bi-person-circle me-2"></i> Gérer les Docteurs
        </a>
        <a href="{{ path('admin_manage_admins') }}">
            <i class="bi bi-person-badge me-2"></i> Gérer les Admins
        </a>
        <a href="{{ path('app_register') }}">
            <i class="bi bi-person-plus me-2"></i> Créer un Compte
        </a>
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
        </a>
    </div>


    <!-- Contenu principal -->
    <div class="content">
        <h1 class="mb-4">Gérer les Administrateurs</h1>

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom de l'Administrateur</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for admin in admins %}
                <tr>
                    <td>{{ admin.id }}</td>
                    <td>{{ admin.username }}</td>
                    <td>{{ admin.email }}</td>
                    <td>
                        <a href="#" class="btn btn-info btn-sm">Voir</a>
                        <a href="#" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="#" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous supprimer cet administrateur ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun administrateur trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
