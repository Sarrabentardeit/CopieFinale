{% extends 'base.html.twig' %}

{% block title %}Mon Espace Patient{% endblock %}

{% block stylesheets %}
    <style>

        body {
            background: linear-gradient(to bottom right, #eaf9f0, #c8e6c9);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Roboto', sans-serif;
        }

        /* Conteneur principal */
        .main-content {
            margin-left: 260px;
            padding: 20px;
            min-height: 100vh;
        }

        /* Titres */
        h1, h2 {
            font-weight: bold;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        /* Cartes */
        .card-custom {
            background-color: #fff;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card-header-custom {
            font-size: 1.2rem;
            font-weight: bold;
            color: #fff;
            padding: 15px;
            border-radius: 15px 15px 0 0;
        }

        .card-header-blue {
            background-color: #007bff;
        }

        .card-header-green {
            background-color: #28a745;
        }

        .card-header-cyan {
            background-color: #17a2b8;
        }

        .card-body {
            padding: 20px;
        }

        /* Table stylisée */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th, table td {
            padding: 10px 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #f1f1f1;
        }

        .badge {
            font-size: 0.9rem;
        }

        /* Bouton */
        .btn-custom {
            border-radius: 25px;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            transform: scale(1.05);
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: #fff;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
            padding: 20px 10px;
        }

        .sidebar h3 {
            text-align: center;
            color: #00a876;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            color: #ddd;
            text-decoration: none;
            padding: 10px 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .sidebar a:hover, .sidebar a.active {
            background-color: #00a876;
            color: #fff;
        }

        .sidebar a i {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="sidebar">
        <h3>Tableau de Bord</h3>
        <a href="{{ path('patient_dashboard') }}" class="active">
            <i class="bi bi-speedometer2"></i> Accueil
        </a>
        <a href="{{ path('appointment_new') }}">
            <i class="bi bi-calendar-plus"></i> Prendre un Rendez-vous
        </a>
        <a href="{{ path('app_medical_record_my') }}">
            <i class="bi bi-file-medical"></i> Mes Dossiers Médicaux
        </a>

        <a href="{{ path('app_patient_account') }}">
            <i class="bi bi-person-circle"></i> Mon Espace Patient
        </a>
        <a href="{{ path('app_logout') }}">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>
    <!-- Contenu principal -->
    <div class="main-content">
        <h1 class="text-center">Mon Espace Patient</h1>

        <!-- Informations Personnelles -->
        <div class="card-custom">
            <div class="card-header-custom card-header-cyan">
                Informations Personnelles
            </div>
            <div class="card-body">
                <p><strong>Nom :</strong> {{ patient.username }}</p>
                <p><strong>Date de naissance :</strong> {{ patient.dob|date('d/m/Y') }}</p>
                <p><strong>Adresse :</strong> {{ patient.address }}</p>
                <p><strong>Email :</strong> {{ patient.email }}</p>
            </div>
        </div>



        <!-- Bouton Modifier -->
        <div class="text-center">
            <a href="{{ path('app_edit_patient_account') }}" class="btn btn-secondary btn-custom">
                Modifier mes informations
            </a>
        </div>
    </div>
{% endblock %}
